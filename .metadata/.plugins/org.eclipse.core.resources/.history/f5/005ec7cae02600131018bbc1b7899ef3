#include <iostream>
#include "include/ListaDuplamenteEncadeada.h"

using namespace std;

int main() {

	ListaDuplamenteEncadeada<int> teste;

	teste.adicionar(1);
	teste.adicionar(2);
	teste.adicionar(3);
	teste.adicionarNoInicio(0);
	teste.adicionarNaPosicao(4, 0);
	teste.adicionarNaPosicao(6, 5);
	teste.adicionarNaPosicao(7, 4);

	int x = teste.getTamanho();
	for (int i = 0; i < x; i++) {
		cout << i << " - " << teste.mostra(i) << endl;
	}

	cout << "________________" << endl;
	teste.retirarDaPosicao(4);
	teste.removerDoInicio();
	teste.removerDoInicio();
	x = teste.getTamanho();
	for (int i = 0; i < x; i++) {
		cout << i << " - " << teste.mostra(i) << endl;
	}

	return 0;
}
